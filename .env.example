# =================================================
# xgacf Project Environment Variables (.env.example)
# =================================================

# -------------------- Bot Config --------------------
BOT_TOKEN=your_telegram_bot_token
ADMIN_ID=your_telegram_admin_user_id

# -------------------- TON Wallet Config --------------------
# Mnemonic for HD wallet (used to derive sub-wallets and for collection)
TON_MNEMONIC="word1 word2 word3 ..."
# TON Center API Key
TONCENTER_API_KEY=your_toncenter_api_key
# TON USDT Master Contract Address (Mainnet default)
TON_USDT_MASTER=EQCxE6vUtKJK-C2W1RZ7pNbqU_cxxYinb6K9vcfTlFsfhf3t

# -------------------- TRON Wallet Config --------------------
# Mnemonic for TRON HD wallet
TRON_MNEMONIC="word1 word2 word3 ..."
# TronGrid API Key
TRONGRID_API_KEY=your_trongrid_api_key
# TRON Network: mainnet or nile
TRON_NETWORK=mainnet

# -------------------- OkPay Config --------------------
# OkPay Merchant ID
OKPAY_ID=your_okpay_merchant_id
# OkPay Secret Key (for signature)
OKPAY_SECRET=your_okpay_secret_key
# OkPay Callback IP Whitelist (Optional, comma-separated: e.g., 1.1.1.1,2.2.2.2)
OKPAY_ALLOWED_IPS=

# -------------------- Server Deployment Config --------------------
# Server Domain (used to generate OkPay callback URL)
SERVER_DOMAIN=https://your-domain.com

# -------------------- Business Config --------------------
# Use Testnet (true/false)
TESTNET=false
# Order status check interval (seconds)
CHECK_INTERVAL=15
# TON to USDT base price (for calculation)
TON_PRICE_USDT=6.5
# Price markup ratio (e.g., 1.18 means 18% markup)
PRICE_MARKUP=1.18
# Order timeout (minutes)
ORDER_TIMEOUT_MINUTES=30
# Collection threshold (USDT)
COLLECTION_THRESHOLD=50.0

# -------------------- Fragment Config --------------------
# Fragment Login Cookie (CRITICAL for auto-fulfillment)
FRAGMENT_COOKIE=your_fragment_cookie
# Fragment Hash (if required by API)
FRAGMENT_HASH=
